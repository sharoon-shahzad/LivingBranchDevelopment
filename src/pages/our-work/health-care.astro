---
import Layout from "../../layouts/Layout.astro";
import impact1 from "../../images/placeholders/impact-1.svg";
import impact2 from "../../images/placeholders/impact-2.svg";
import impact3 from "../../images/placeholders/impact-3.svg";
import impact4 from "../../images/placeholders/impact-4.svg";
import impact5 from "../../images/placeholders/impact-5.svg";

const stats = [
  { value: "3,500+", label: "Health screenings" },
  { value: "120", label: "Mobile camps" },
  { value: "24", label: "Partner clinics" }
];

const pillars = [
  {
    title: "Mobile outreach",
    description: "Bring primary care and screenings to hard-to-reach neighborhoods."
  },
  {
    title: "Maternal care",
    description: "Support mothers and infants with checkups, nutrition, and referrals."
  },
  {
    title: "Community health",
    description: "Train health champions to promote prevention and early care."
  }
];

const pathway = [
  {
    title: "Screen",
    text: "Early detection through camps and home visits."
  },
  {
    title: "Treat",
    text: "Basic care and prescriptions with partner clinics."
  },
  {
    title: "Refer",
    text: "Fast referral routes for critical cases."
  },
  {
    title: "Follow up",
    text: "Ongoing check-ins to ensure recovery."
  }
];

const outreach = [
  "Health education sessions for families",
  "Doorstep screening for chronic conditions",
  "Mental wellness check-ins",
  "Emergency transport coordination"
];
---

<Layout
  title="Health Care | Living Branch Development"
  description="Living Branch Development health care programmes deliver mobile outreach, maternal care, and community health support."
>
  <section class="health-hero">
    <div class="container-page grid gap-10 py-16 lg:grid-cols-[1.05fr_0.95fr] lg:items-center">
      <div>
        <p
          class="inline-flex items-center gap-2 rounded-full bg-white/75 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-[color-mix(in_srgb,var(--brand-navy)_80%,black)] shadow-sm ring-1 ring-black/5"
        >
          Programme focus
        </p>
        <h1 class="mt-4 font-heading text-4xl font-semibold tracking-tight text-[var(--fg)] sm:text-5xl">
          Health care that reaches families at their doorstep.
        </h1>
        <p class="mt-4 max-w-xl text-base leading-relaxed text-[var(--muted)] sm:text-lg">
          We connect communities to preventative care, maternal support, and referral pathways so families can
          recover faster and stay healthy.
        </p>
        <div class="mt-7 flex flex-wrap gap-3">
          <a
            href="/donate"
            class="inline-flex items-center justify-center rounded-full bg-[var(--brand-navy)] px-6 py-3 text-sm font-semibold text-white shadow-sm transition hover:bg-[color-mix(in_srgb,var(--brand-navy)_85%,black)]"
          >
            Support healthcare
          </a>
          <a
            href="/get-involved"
            class="inline-flex items-center justify-center rounded-full border border-[var(--border)] bg-white/80 px-6 py-3 text-sm font-semibold text-[var(--fg)] transition hover:border-[var(--brand-navy)] hover:bg-white"
          >
            Partner with us
          </a>
        </div>
      </div>
      <div class="hero-stack">
        <div class="hero-image">
          <img
            src={impact1.src}
            alt="Health outreach placeholder"
            width="520"
            height="420"
            loading="lazy"
            decoding="async"
            class="h-full w-full object-contain"
          />
        </div>
        <div class="stat-stack">
          {stats.map((stat) => (
            <div class="stat-pill">
              <p class="text-xl font-semibold text-[var(--fg)]">{stat.value}</p>
              <p class="text-xs uppercase tracking-[0.2em] text-[var(--muted)]">{stat.label}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <section class="container-page py-12 sm:py-14">
    <div class="pillars-header">
      <p class="text-xs font-semibold uppercase tracking-[0.2em] text-[color-mix(in_srgb,var(--brand-navy)_70%,var(--muted))]">
        Service pillars
      </p>
      <h2 class="mt-3 font-heading text-2xl font-semibold tracking-tight text-[var(--fg)] sm:text-3xl">
        The care we deliver, consistently.
      </h2>
    </div>
    <div class="pillars-grid">
      {pillars.map((pillar, index) => (
        <article class="pillar-card">
          <span class="pillar-index">0{index + 1}</span>
          <h3 class="mt-4 font-heading text-lg font-semibold text-[var(--fg)]">{pillar.title}</h3>
          <p class="mt-2 text-sm leading-relaxed text-[var(--muted)]">{pillar.description}</p>
        </article>
      ))}
    </div>
  </section>

  <section class="pathway-band">
    <div class="container-page py-12 sm:py-14">
      <div class="max-w-2xl">
        <p class="text-xs font-semibold uppercase tracking-[0.2em] text-[color-mix(in_srgb,var(--brand-navy)_70%,var(--muted))]">
          Care pathway
        </p>
        <h2 class="mt-3 font-heading text-2xl font-semibold tracking-tight text-[var(--fg)] sm:text-3xl">
          From screening to recovery support.
        </h2>
      </div>
      <div class="pathway-grid">
        {pathway.map((step) => (
          <div class="pathway-card">
            <div class="pathway-dot" aria-hidden="true"></div>
            <h3 class="mt-4 font-heading text-lg font-semibold text-[var(--fg)]">{step.title}</h3>
            <p class="mt-2 text-sm leading-relaxed text-[var(--muted)]">{step.text}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="container-page py-12 sm:py-14">
    <div class="grid gap-10 md:grid-cols-[1fr_1.1fr] md:items-center">
      <div class="outreach-image">
        <img
          src={impact2.src}
          alt="Community outreach placeholder"
          width="520"
          height="420"
          loading="lazy"
          decoding="async"
          class="h-full w-full object-contain"
        />
      </div>
      <div>
        <p class="text-xs font-semibold uppercase tracking-[0.2em] text-[color-mix(in_srgb,var(--brand-navy)_70%,var(--muted))]">
          Outreach snapshot
        </p>
        <h2 class="mt-3 font-heading text-2xl font-semibold tracking-tight text-[var(--fg)] sm:text-3xl">
          Community-first care in action.
        </h2>
        <ul class="mt-6 grid gap-3 text-sm text-[var(--muted)]">
          {outreach.map((item) => (
            <li class="flex items-start gap-3">
              <span class="mt-1 h-2.5 w-2.5 rounded-full bg-[var(--brand-cyan)]" aria-hidden="true"></span>
              <span>{item}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </section>

  <section class="carousel-band">
    <div class="container-page py-12 sm:py-14">
      <div class="carousel-header">
        <div>
          <p class="text-xs font-semibold uppercase tracking-[0.2em] text-[color-mix(in_srgb,var(--brand-navy)_70%,var(--muted))]">
            Field moments
          </p>
          <h2 class="mt-3 font-heading text-2xl font-semibold tracking-tight text-[var(--fg)] sm:text-3xl">
            A closer look at community care.
          </h2>
        </div>
        <div class="carousel-controls" aria-hidden="true">
          <a class="carousel-dot" href="#health-slide-1"></a>
          <a class="carousel-dot" href="#health-slide-2"></a>
          <a class="carousel-dot" href="#health-slide-3"></a>
          <a class="carousel-dot" href="#health-slide-4"></a>
        </div>
      </div>
      <div class="carousel-track" aria-label="Health care photo carousel">
        <article id="health-slide-1" class="carousel-card">
          <img
            src={impact3.src}
            alt="Health camp placeholder"
            width="520"
            height="360"
            loading="lazy"
            decoding="async"
            class="h-full w-full object-contain"
          />
        </article>
        <article id="health-slide-2" class="carousel-card">
          <img
            src={impact4.src}
            alt="Community screening placeholder"
            width="520"
            height="360"
            loading="lazy"
            decoding="async"
            class="h-full w-full object-contain"
          />
        </article>
        <article id="health-slide-3" class="carousel-card">
          <img
            src={impact5.src}
            alt="Health education placeholder"
            width="520"
            height="360"
            loading="lazy"
            decoding="async"
            class="h-full w-full object-contain"
          />
        </article>
        <article id="health-slide-4" class="carousel-card">
          <img
            src={impact1.src}
            alt="Clinic support placeholder"
            width="520"
            height="360"
            loading="lazy"
            decoding="async"
            class="h-full w-full object-contain"
          />
        </article>
      </div>
    </div>
  </section>

  <section class="container-page py-12 sm:py-14">
    <div class="cta-panel">
      <div>
        <h2 class="font-heading text-2xl font-semibold tracking-tight text-[var(--fg)] sm:text-3xl">
          Keep health services consistent for families.
        </h2>
        <p class="mt-3 max-w-xl text-sm leading-relaxed text-[var(--muted)] sm:text-base">
          Your support keeps clinics mobile, medicines stocked, and referrals fast.
        </p>
      </div>
      <div class="flex flex-wrap gap-3">
        <a
          href="/donate"
          class="inline-flex items-center justify-center rounded-full bg-[var(--brand-cyan)] px-6 py-3 text-sm font-semibold text-white shadow-sm transition hover:bg-[color-mix(in_srgb,var(--brand-cyan)_88%,black)]"
        >
          Donate for health
        </a>
        <a
          href="/get-involved"
          class="inline-flex items-center justify-center rounded-full border border-[var(--border)] bg-white px-6 py-3 text-sm font-semibold text-[var(--fg)] transition hover:border-[var(--brand-navy)]"
        >
          Explore partnerships
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .health-hero {
    background: #f5f9ff;
  }

  .hero-stack {
    display: grid;
    gap: 1.2rem;
  }

  .hero-image {
    border-radius: 28px;
    border: 1px solid var(--border);
    background: #ffffff;
    padding: 1.8rem;
    box-shadow: 0 18px 40px rgba(12, 16, 34, 0.08);
  }

  .stat-stack {
    display: grid;
    gap: 0.8rem;
    grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
  }

  .stat-pill {
    border-radius: 16px;
    border: 1px solid var(--border);
    background: #ffffff;
    padding: 0.9rem 1rem;
    box-shadow: 0 10px 18px rgba(12, 16, 34, 0.06);
  }

  .pillars-header {
    max-width: 40rem;
  }

  .pillars-grid {
    margin-top: 2rem;
    display: grid;
    gap: 1.2rem;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  }

  .pillar-card {
    border-radius: 22px;
    border: 1px solid var(--border);
    background: #ffffff;
    padding: 1.5rem;
    box-shadow: 0 12px 22px rgba(12, 16, 34, 0.08);
  }

  .pillar-index {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 999px;
    background: color-mix(in srgb, var(--brand-cyan) 15%, white);
    padding: 0.35rem 0.75rem;
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 0.16em;
    text-transform: uppercase;
    color: color-mix(in srgb, var(--brand-navy) 80%, black);
  }

  .pathway-band {
    background: #f6f4ff;
  }

  .pathway-grid {
    margin-top: 2rem;
    display: grid;
    gap: 1rem;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  }

  .pathway-card {
    border-radius: 20px;
    border: 1px solid var(--border);
    background: #ffffff;
    padding: 1.4rem 1.5rem;
    box-shadow: 0 10px 18px rgba(12, 16, 34, 0.06);
    position: relative;
  }

  .pathway-dot {
    height: 12px;
    width: 12px;
    border-radius: 999px;
    background: var(--brand-cyan);
    box-shadow: 0 0 0 6px color-mix(in srgb, var(--brand-cyan) 18%, transparent);
  }

  .outreach-image {
    border-radius: 24px;
    border: 1px solid var(--border);
    background: #ffffff;
    padding: 1.5rem;
    box-shadow: 0 16px 32px rgba(12, 16, 34, 0.08);
  }

  .cta-panel {
    border-radius: 28px;
    border: 1px solid var(--border);
    background: #eef9f7;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .carousel-band {
    background: #ffffff;
  }

  .carousel-header {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .carousel-controls {
    display: flex;
    gap: 0.6rem;
  }

  .carousel-dot {
    height: 10px;
    width: 10px;
    border-radius: 999px;
    background: color-mix(in srgb, var(--brand-cyan) 20%, white);
    box-shadow: inset 0 0 0 1px color-mix(in srgb, var(--brand-cyan) 40%, white);
  }

  .carousel-track {
    margin-top: 1.8rem;
    display: grid;
    gap: 1.2rem;
    grid-auto-flow: column;
    grid-auto-columns: minmax(260px, 1fr);
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    padding-bottom: 0.5rem;
  }

  .carousel-track::-webkit-scrollbar {
    height: 6px;
  }

  .carousel-track::-webkit-scrollbar-thumb {
    background: color-mix(in srgb, var(--brand-cyan) 35%, white);
    border-radius: 999px;
  }

  .carousel-card {
    scroll-snap-align: start;
    border-radius: 22px;
    border: 1px solid var(--border);
    background: #ffffff;
    padding: 1.2rem;
    box-shadow: 0 12px 22px rgba(12, 16, 34, 0.08);
    min-height: 220px;
  }

  @media (min-width: 768px) {
    .carousel-header {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
    }

    .carousel-track {
      grid-auto-columns: minmax(320px, 1fr);
    }
  }

  @media (min-width: 768px) {
    .cta-panel {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
    }
  }
</style>

