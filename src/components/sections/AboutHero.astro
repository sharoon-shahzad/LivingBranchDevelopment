---
import { Image } from "astro:assets";
import aboutHero from "../../images/hero/about_hero.jpeg";
---

<section class="about-hero" aria-labelledby="about-hero-heading">
  <div class="about-hero-media" aria-hidden="true">
    <Image
      src={aboutHero}
      alt=""
      width={1920}
      height={1080}
      loading="eager"
      class="about-hero-image"
    />
  </div>
  <div class="about-hero-overlay" aria-hidden="true"></div>
  <div class="container-page about-hero-content py-12 sm:py-16 md:py-20 lg:py-24 xl:py-32">
    <div class="mx-auto max-w-4xl">
      <!-- Eyebrow -->
      <div class="text-center">
        <p class="inline-flex items-center gap-2 rounded-full bg-white/90 px-3 py-1 text-xs font-semibold uppercase tracking-[0.16em] text-[color-mix(in_srgb,var(--brand-navy)_85%,black)] shadow-lg ring-1 ring-black/5 backdrop-blur-sm sm:px-4 sm:py-1.5">
          <span class="relative flex h-2 w-2">
            <span class="absolute inline-flex h-full w-full animate-ping rounded-full bg-[var(--brand-cyan)] opacity-75"></span>
            <span class="relative inline-flex h-2 w-2 rounded-full bg-[var(--brand-cyan)]"></span>
          </span>
          About Us
        </p>
      </div>

      <!-- Main Heading -->
      <h1
        id="about-hero-heading"
        class="mt-6 text-center font-heading text-3xl font-bold tracking-tight text-[var(--fg)] sm:mt-8 sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl"
      >
        <span class="block text-(--brand-orange)">Growing futures,</span>
        <span class="block text-(--brand-orange)">branch by branch.</span>
      </h1>
    </div>
  </div>
</section>

<style>
  .about-hero {
    position: relative;
    overflow: hidden;
  }

  .about-hero-media {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .about-hero-image {
    height: 100%;
    width: 100%;
    object-fit: cover;
    object-position: center top;
  }

  .about-hero-overlay {
    position: absolute;
    inset: 0;
    z-index: 0;
    background: rgba(255, 255, 255, 0.24);
  }

  .about-hero-content {
    position: relative;
    z-index: 1;
  }
</style>
