---
const programmes = [
  {
    key: "education",
    label: "Education",
    description: "Education, nutrition, and holistic development of children.",
    color: "var(--brand-lime)",
    bg: "#e9ffd6",
    href: "/our-work/education"
  },
  {
    key: "healthcare",
    label: "Health Care",
    description: "Taking healthcare services to the doorsteps of hard-to-reach communities.",
    color: "var(--brand-cyan)",
    bg: "#e4faff",
    href: "/our-work/health-care"
  },
  {
    key: "skills",
    label: "Skill Development",
    description: "Skill training and livelihood support for underprivileged youth.",
    color: "var(--brand-orange)",
    bg: "#FFA239",
    href: "/our-work/skill-development"
  },
  {
    key: "women",
    label: "Women Empowerment",
    description: "Empowering girls and women through community engagement and leadership.",
    color: "var(--brand-pink)",
    bg: "#ffaab8",
    href: "/our-work/women-empowerment"
  },
  {
    key: "counselling",
    label: "Counselling",
    description: "Psychosocial support and counselling for children and families.",
    color: "var(--brand-navy)",
    bg: "#e9e7ff",
    href: "/our-work/counselling"
  },
  {
    key: "disaster",
    label: "Disaster Response",
    description: "Reaching out quickly to families affected by disasters and emergencies.",
    color: "#ff4b3a",
    bg: "#ffe0d8",
    href: "/our-work/disaster-response"
  }
];
---

<section class="programmes-surface" aria-labelledby="programmes-heading">
  <div class="container-page py-14 sm:py-16">
    <div class="text-center">
      <p class="eyebrow-brush inline-block">Our programmes</p>
      <h2
        id="programmes-heading"
        class="mt-3 font-heading text-2xl font-semibold tracking-tight text-[var(--fg)] sm:text-3xl"
      >
        Support that meets real needs.
      </h2>
      <p class="mt-3 max-w-2xl mx-auto text-sm leading-relaxed text-[var(--muted)] sm:text-base">
        Living Branch Development focuses on interconnected programmes that improve education, health,
        livelihoods, and resilience for communities most in need.
      </p>
    </div>

    <div class="mt-8 grid gap-6 sm:mt-10 sm:grid-cols-2">
      {programmes.map((p) => (
        <a
          href={p.href}
          class="flex gap-4 items-start rounded-3xl border border-[var(--border)] p-5 shadow-sm transition hover:-translate-y-0.5 hover:shadow-md focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[color-mix(in_srgb,var(--brand-navy)_65%,white)]"
          style={`background:${p.bg}`}
        >
          <div
            class="mt-1 inline-flex h-12 w-12 shrink-0 items-center justify-center rounded-2xl text-white shadow-sm"
            style={`background:${p.color}`}
            aria-hidden="true"
          >
              {p.key === "education" && (
                <svg viewBox="0 0 24 24" class="h-7 w-7" aria-hidden="true">
                  <path
                    fill="currentColor"
                    d="M4 9.5 12 6l8 3.5-8 3.5L4 9.5Zm1 3.1 7 3.1 7-3.1V14l-7 3.5L5 14v-1.4Z"
                  />
                </svg>
              )}
              {p.key === "healthcare" && (
                <svg viewBox="0 0 24 24" class="h-7 w-7" aria-hidden="true">
                  <path
                    fill="currentColor"
                    d="M5 13c-1.7-1.7-1.7-4.5 0-6.2A4.4 4.4 0 0 1 8.1 6c1.1 0 2.1.4 2.9 1.2.8-.8 1.8-1.2 2.9-1.2 1.2 0 2.3.5 3.1 1.4 1.7 1.7 1.7 4.5 0 6.2l-6 6-6-6Z"
                  />
                  <path
                    fill="#fff"
                    d="M11 15h2l.7-2.1H15a1 1 0 0 0 .9-.6l.6-1.3h-2l-.3.7h-1l-.7-2.1-1.5 4.4-.5-1.6H9l.7 2.6a1 1 0 0 0 1 .7Z"
                  />
                </svg>
              )}
              {p.key === "skills" && (
                <svg viewBox="0 0 24 24" class="h-7 w-7" aria-hidden="true">
                  <path
                    fill="currentColor"
                    d="M5 6.5A2.5 2.5 0 0 1 7.5 4h9A2.5 2.5 0 0 1 19 6.5v11A2.5 2.5 0 0 1 16.5 20h-9A2.5 2.5 0 0 1 5 17.5v-11Z"
                  />
                  <path
                    fill="#fff"
                    d="M9 8h6v1.5H9V8Zm0 3h4.5v1.5H9V11Zm0 3h3v1.5H9V14Z"
                  />
                </svg>
              )}
              {p.key === "women" && (
                <svg viewBox="0 0 24 24" class="h-7 w-7" aria-hidden="true">
                  <path
                    fill="currentColor"
                    d="M12 4a5 5 0 0 1 1.5 9.8V16h2v2h-2v2h-2v-2H9v-2h2v-2.2A5 5 0 0 1 12 4Z"
                  />
                  <circle cx="12" cy="9" r="2.8" fill="#fff" />
                </svg>
              )}
              {p.key === "counselling" && (
                <svg viewBox="0 0 24 24" class="h-7 w-7" aria-hidden="true">
                  <path
                    fill="currentColor"
                    d="M5 6.5A2.5 2.5 0 0 1 7.5 4h9A2.5 2.5 0 0 1 19 6.5V13a2.5 2.5 0 0 1-2.5 2.5H13l-3.3 3.1a.9.9 0 0 1-1.5-.7V15H7.5A2.5 2.5 0 0 1 5 12.5v-6Z"
                  />
                  <path
                    fill="#fff"
                    d="M9 8.25h6V9.5H9V8.25Zm0 2.75h4.5v1.25H9V11Z"
                  />
                </svg>
              )}
              {p.key === "disaster" && (
                <svg viewBox="0 0 24 24" class="h-7 w-7" aria-hidden="true">
                  <path
                    fill="currentColor"
                    d="M12 3 4 7v5c0 4.4 2.7 8.4 8 9 5.3-.6 8-4.6 8-9V7l-8-4Z"
                  />
                  <path
                    fill="#fff"
                    d="M11.2 8.5 9 12h2.3L10.8 16l3.4-4h-2.2l1.2-3.5h-2Z"
                  />
                </svg>
              )}
          </div>
          <div>
            <h3 class="font-heading text-lg sm:text-xl font-semibold tracking-wide text-[color-mix(in_srgb,var(--brand-navy)_92%,black)]">
              {p.label}
            </h3>
            <p class="mt-2 text-sm leading-relaxed text-[color-mix(in_srgb,var(--brand-navy)_55%,var(--muted))] sm:text-[1rem]">
              {p.description}
            </p>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

